@model EmailForm
<div class="container bg-light" style="width: 400px; " >
   
<h2 class="text-warning">Registration Form</h2>
<form  method="post"  enctype="multipart/form-data" >
@*   <div asp-validation-summary="All"></div>
*@   
@* <input asp-for="ID" hidden />*@
    <input asp-for="ImageUrl" hidden />
        <div class="form-group mt-2 ">
            <input type="text" asp-for="FullName" required class="form-control pt-20" placeholder="Full Name" />
            <span asp-validation-for="FullName"></span>
        </div>
        @*<div class="form-group mt-2 ">
            <input type="text" asp-for="LastName" required class="form-control" placeholder="Last Name" />
              <span asp-validation-for="LastName"></span>
        </div>*@
        <div class="form-group mt-2 ">
        <select  class="form-select" asp-for="Gender" required>
            <option value="">Select Gender</option>
            <option value="male">Male</option>
                <option value="female">Female</option>             
            </select>
            </div>
        <div class="form-group mt-2 ">
            <input type="email" asp-for="Email" required class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email"></span>
            </div>
        <div class="form-group mt-2 ">
            <input type="password"  asp-for="Password" class="form-control" required placeholder="Password" />
            <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group mt-2 ">
            <input type="file" name="file" id="fileId" accept=".png, .jpg, .jpeg" required asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl"></span>
    
            </div>
              <div><h4>@TempData["error"]</h4></div>
        <div class="mt-2 w-50">
                <input id="submit" type="submit"  value="Submit" class="btn btn-success " />
            </div>
          
</form>



</div>

@section scripts{
        <script src="~/js/EmailForm.js"></script>
    @{
    <partial name="_ValidationScriptsPartial"/>
}}

