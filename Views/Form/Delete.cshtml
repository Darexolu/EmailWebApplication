@model EmailForm
<div class="container bg-light w-50">
    <h2 class="text-warning">Delete Form</h2>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input asp-for="ID" hidden />
        <div class="form-group mt-2 w-50">
            <input type="text"  disabled asp-for="FirstName"  required class="form-control pt-20" placeholder="First Name" />
           
        </div>
        <div class="form-group mt-2 w-50">
            <input type="text" disabled asp-for="LastName" required class="form-control" placeholder="Last Name" />
        </div>
        <div class="form-group mt-2 w-50">
            <select class="form-control" disabled asp-for="Gender" required>
                <option value="">Select Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>
        <div class="form-group mt-2 w-50">
            <input type="email" disabled asp-for="Email" required class="form-control" placeholder="Email" />
            
        </div>
        <div class="mt-2 w-50">
            <input id="submit" type="submit" value="Delete" class="btn btn-danger " />
        </div>
    </form>



</div>
