@model EmailForm
<div class="container bg-light" style="width: 400px; " >
<h2 class="text-primary mb-3 pt-2" style="font-family: Calibri;">Log in</h2>
<form method="post">
        <div asp-validation-summary="All"></div>
<div class="form-group mt-2 ">
    <input type="email" asp-for="Email" required class="form-control" placeholder="Email" />
    <span asp-validation-for="Email"></span>
</div>
<div class="form-group mt-2 ">
    <input type="password" asp-for="Password" required class="form-control" placeholder="Password" />
    <span asp-validation-for="Password"></span>
</div>
    <div class="mt-2 w-50">
        <input id="submit" asp-controller="Form" asp-action="Login" type="submit" value="Submit" class="btn btn-success " />
    </div>
</form>
</div>
